<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="ItemDiceView">

        <attr name="diceWidth" format="dimension" />
        <attr name="diceHeight" format="dimension" />

        <attr name="diceText" format="string"/>
        <attr name="diceImage" format="reference"/>
        <attr name="diceTextColor" format="color" />
        <attr name="diceTextSize" format="dimension"/>
        <attr name="dicePaddings" format="integer"/>

        <attr name="diceImageScaleType">
            <enum name="fitCenter" value="0"/>
            <enum name="centerCrop" value="1"/>
            <enum name="centerInside" value="2"/>
            <enum name="fitEnd" value="3"/>
            <enum name="fitStart" value="4"/>
            <enum name="fitXY" value="5"/>
            <enum name="matrix" value="6"/>
        </attr>

    </declare-styleable>
    
</resources>